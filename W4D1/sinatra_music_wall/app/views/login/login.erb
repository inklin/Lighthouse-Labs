<h1>Login</h1>
<% if @login_error %>
  <p><%= @login_error %></p>
<% end %>
<form action="/login" method="POST">
  <p>
    <label for="email">Email</label>
    <input type="text" name="email" />
  </p>
  <p>
    <label for="password">Password</label>
    <input type="text" name="password" />
  </p>
  <button type="submit">Login</button>
</form>
<a href="/signup">Sign up</a>